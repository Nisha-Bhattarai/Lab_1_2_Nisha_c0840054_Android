<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".ViewEntryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editProductTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Edit Product"
            android:textSize="20dp"
            android:textColor="@color/royal_blue" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Product Id : "
                android:textColor="@color/black"
                android:textSize="18dp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>


            <TextView
                android:id="@+id/productIdTV"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Product Name : "
                android:textColor="@color/black"
                android:textSize="18dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/productIdTV"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/productNameTV"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/productIdTV"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Product Desc : "
                android:textColor="@color/black"
                android:textSize="18dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/productNameTV"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/productDescTV"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/productNameTV"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="Product Price : "
                android:textColor="@color/black"
                android:textSize="18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productDescTV" />

            <TextView
                android:id="@+id/productPriceTV"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/productDescTV"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/locationTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:text="User Location"
                android:background="@color/royal_blue"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>

